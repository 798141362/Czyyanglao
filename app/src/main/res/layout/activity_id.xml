<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:orientation="vertical"
        android:background="@drawable/id_topbackground">
        <TextView
            android:id="@+id/tv_registe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:text="身份"
            android:textColor="@color/colorWhite"
            android:textSize="48sp" />
        <TextView
            android:id="@+id/tv_registe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="个人资料"
            android:textColor="@color/colorGrey"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_topbutton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/id_top_button" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg_shape_corners">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/id_username"
            android:layout_marginLeft="16dp"
            android:drawablePadding="8dp"
            android:text="本人姓名"
            android:textColor="@color/colorDrake"
            android:textSize="24sp"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="请输入本人姓名"
        android:textSize="16sp"
        android:maxLines="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg_shape_corners">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/id_userid"
            android:layout_marginLeft="16dp"
            android:drawablePadding="8dp"
            android:text="身份证号"
            android:textColor="@color/colorDrake"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_userid"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入身份证号"
            android:textSize="16sp"
            android:maxLines="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg_shape_corners">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/id_userphone"
            android:layout_marginLeft="16dp"
            android:drawablePadding="8dp"
            android:text="子女电话"
            android:textColor="@color/colorDrake"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_userphone"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入子女电话"
            android:inputType="number"
            android:textSize="16sp"
            android:maxLines="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="@drawable/bg_shape_corners">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/id_useraddress"
            android:layout_marginLeft="16dp"
            android:drawablePadding="8dp"
            android:text="居住地址"
            android:textColor="@color/colorDrake"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_useraddress"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入家庭地址"
            android:textSize="16sp"
            android:maxLines="1" />
    </LinearLayout>
</LinearLayout>
