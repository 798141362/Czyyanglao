<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="204dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_login_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tv_color1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color1" />
        <TextView
            android:id="@+id/tv_color2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="@color/color2" />
        <TextView
            android:id="@+id/tv_color3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:background="@color/color3" />
        <TextView
            android:id="@+id/tv_color4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_weight="1"
            android:background="@color/color4" />
        <TextView
            android:id="@+id/tv_color5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_weight="1"
            android:background="@color/color5" />


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorWhite"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_below="@+id/iv_logo"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/colorDrake"
        android:hint="用户名"
        android:inputType="number"
        android:background="@drawable/bg_shape_corners"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="5dp"
        android:maxLines="1" />

    <EditText
        android:id="@+id/et_password"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="@color/colorDrake"
        android:hint="密码"
        android:inputType="textPassword"
        android:background="@drawable/bg_shape_corners"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="5dp"
        android:maxLines="1"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_gravity="center"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:text="登录"
        android:textColor="@color/colorGreen"
        android:textSize="24sp"
        android:background="@drawable/bg_login"
        android:translationZ="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_gravity="center"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="注册"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:background="@drawable/bg_login"
        android:translationZ="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/tv_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="CZYAPP"
        android:textColor="@color/colorDrake"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>
